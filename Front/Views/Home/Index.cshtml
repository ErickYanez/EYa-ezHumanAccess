
<div id="template-mo-zay-hero-carousel" class="carousel slide" data-bs-ride="carousel">
    <ol class="carousel-indicators">
        <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="0" class="active"></li>
        <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="1"></li>
        <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="container">
                <div class="row p-5">
                    <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                        <img class="img-fluid" src="~/assets/img/banner_img_01.jpg" alt="">
                    </div>
                    <div class="col-lg-6 mb-0 d-flex align-items-center">
                        <div class="text-align-left align-self-center">
                            <h1 class="h1 text-success"><b>Erick</b> Ecommerce</h1>
                            <h3 class="h2">El mejor lugar para comprar</h3>
                            <p>
                                Elige los mejores Articulo
                                Estos Articulos vienen desarrollados a base de pruebas. <a rel="sponsored" class="text-success" href="https://templatemo.com" target="_blank">Envia tus articulos al carrito</a>.
                                %100 recomendado.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @foreach (Entitys.Articulo articulo in Model.Articulos)
        {
            <div class="carousel-item">
                <div class="container">
                    <div class="row p-5">
                        <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                            @if (articulo.Imagen != null)
                            {
                                var imagenSRC = $"data:image;base64,{articulo.Imagen}";
                                <img class="img-fluid" src='@imagenSRC' height='500px' width='500px'>
                            }
                        </div>
                        <div class="col-lg-6 mb-0 d-flex align-items-center">
                            <div class="text-align-left">
                                <h1 class="h1">@articulo.Nombre</h1>
                                <p>
                                    @articulo.Descripcion                                 
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev text-decoration-none w-auto ps-3" href="#template-mo-zay-hero-carousel" role="button" data-bs-slide="prev">
        <i class="fas fa-chevron-left"></i>
    </a>
    <a class="carousel-control-next text-decoration-none w-auto pe-3" href="#template-mo-zay-hero-carousel" role="button" data-bs-slide="next">
        <i class="fas fa-chevron-right"></i>
    </a>
</div>
<section class="container py-5">
    <div class="row text-center pt-3">
        <div class="col-lg-6 m-auto">
            <h1 class="h1">Los mejores productos</h1>
            <p>
                Escoge el producto que desea comprar presionando el boton y puede revisarlo en el carrito
            </p>
        </div>
    </div>
    <div class="row">
        @foreach (Entitys.Articulo articulo in Model.Articulos)
        {
            <div class="col-12 col-md-4 p-5 mt-3">           
                    @if (articulo.Imagen != null)
                    {
                        var imagenSRC = $"data:image;base64,{articulo.Imagen}";
                    <a href="#"><img src='@imagenSRC' class="rounded-circle img-fluid border"></a>
                    }
                    <h5 class="text-center mt-3 mb-3">@articulo.Nombre</h5>
                    <h5 class="text-center mt-3 mb-3">$@articulo.Precio</h5>
                    <p class="text-center"><a href="@Url.Action("CartPost", "Home", new { IdArticulo = articulo.IdArticulo, Nombre = articulo.Nombre, Precio = articulo.Precio, Descripcion = articulo.Descripcion})" class="btn btn-success">Agregar <i class="bi bi-cart3" style="color: khaki"></i></a></p>
            </div>
        }
    </div>
</section>